-- SQLite


-- 1 + 2: Examine Tables + Identify Primary Key
SELECT * FROM trips;

SELECT * FROM riders;

SELECT * FROM cars;

-- Primary Key of trips is trip_id
-- Primary Key of riders is rider_id
-- Primary Key of cars is car_id

-- 3. Cross Join
SELECT riders.first,
   riders.last,
   cars.model
FROM riders, cars;

-- 4. Left Join
SELECT *
FROM trips
LEFT JOIN riders 
  ON trips.rider_id = riders.id;

-- 5. Inner join + Limit columns
SELECT trips.date, 
   trips.pickup, 
   trips.dropoff, 
   trips.type, 
   trips.cost,
   riders.first, 
   riders.last,
   riders.username
FROM trips
LEFT JOIN riders 
  ON trips.rider_id = riders.id;

SELECT *
FROM trips
JOIN cars
  ON trips.car_id = cars.id;

-- 6. Union
SELECT *
FROM riders
UNION ALL
SELECT *
FROM riders2;


-- 7-10. Queries + Aggregate review
SELECT ROUND(AVG(cost), 2)
FROM trips;

SELECT *
FROM riders
WHERE total_trips < 500;

SELECT *
FROM riders
WHERE total_trips < 500
UNION
SELECT *
FROM riders2
WHERE total_trips < 500;

SELECT COUNT(*)
FROM cars
WHERE status = 'active';

SELECT *
FROM cars
ORDER BY trips_completed DESC
LIMIT 2;
