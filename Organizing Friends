In SQLite

-- 1. Create a table named friends with three columns:
DROP TABLE celebs;

CREATE TABLE friends 
(
   id Integer,
   name Text,
   birthday Date
);

-- 2. Beneath your current code, add Ororo Munroe to friends.
-- Her birthday is May 30th, 1940.
Insert Into friends (id, name, birthday) 
Values
  (1, 'Ororo Munroe', '1940-05-30');

-- 3. Check friends table
Select *
From friends;

-- 4. Add 2 friends
Insert Into friends (id, name, birthday) 
Values 
  (2, 'blah', '1999-12-31'), 
  (3, 'blah 2', '1999-12-32');

-- 5. Alter a friend
Update friends
Set name = 'Storm'
Where id = 1;

Select *
From friends;

-- 6. Add new column
ALTER TABLE friends 
ADD COLUMN email TEXT; 

-- 7. Update friend's email
UPDATE friends
SET email = 'storm@codecademy.com'
WHERE id = 1;

-- 8. Removing data
DELETE FROM friends
WHERE id = 1;

SELECT * 
FROM friends;
